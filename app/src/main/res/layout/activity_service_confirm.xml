<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ServiceConfirmActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/complete_heading"
        android:text="Service Progress"
        android:textSize="22dp"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/service_heading"
        android:text="Service type"
        android:textSize="20dp"
        android:layout_below="@+id/complete_heading"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/service"
        android:text="Service"
        android:textSize="20dp"
        android:layout_below="@+id/service_heading"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_heading"
        android:text="Severity"
        android:textSize="20dp"
        android:layout_below="@+id/service"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/severity"
        android:text="None"
        android:textSize="20dp"
        android:layout_below="@+id/time_heading"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notes"
        android:text="Additional Notes"
        android:textSize="20dp"
        android:layout_below="@+id/severity"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/additional_notes"
        android:text="None"
        android:textSize="20dp"
        android:layout_below="@+id/notes"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addDetails"
        android:text="Additional services"
        android:layout_above="@+id/complete_final"
        android:paddingHorizontal="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:layout_marginHorizontal="80dp"
        android:background="@drawable/registerbutton"
        android:textColor="@color/colorWhite"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_final"
        android:text="Cancel"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/cancel_button"
        android:textColor="@color/colorWhite"
        android:enabled="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/complete_final"
        android:text="Job Completed"
        android:layout_above="@+id/cancel_final"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/loginbutton"
        android:textColor="@color/colorWhite"
        android:enabled="true"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorWhite"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>