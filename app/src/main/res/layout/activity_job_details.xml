<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceConfirmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/complete_heading"
            android:text="Service Details"
            android:textSize="24dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price_heading"
            android:text="Service Type"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/service_type"
            android:text="Service"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Severity"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/severity"
            android:text="Service Severity"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Notes"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note"
            android:id="@+id/additional_notes"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Customer"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Customer"
            android:id="@+id/name_customer"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/done"
            android:text="Done"
            android:paddingHorizontal="50dp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/loginbutton"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</RelativeLayout>