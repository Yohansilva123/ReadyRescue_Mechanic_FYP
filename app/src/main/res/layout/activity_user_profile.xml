<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MechanicProfileActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/user_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/user_icon_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/mechanic_heading"
        android:text="  Name of user"
        android:textSize="20dp"
        android:layout_below="@+id/user_icon"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_person"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_heading"
        android:layout_centerHorizontal="true"
        android:text="  0771234567"
        android:textSize="20dp"
        android:layout_below="@+id/mechanic_heading"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_call_black_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price_heading"
        android:layout_below="@+id/number_heading"
        android:text="Services Provided"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/services"
        android:text="Services"
        android:textSize="20dp"
        android:layout_below="@+id/price_heading"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_user"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/logout"
        android:background="@drawable/loginbutton"
        android:textColor="@color/colorWhite"
        android:text="Edit user"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/registerbutton"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:text="Logout"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorWhite"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>