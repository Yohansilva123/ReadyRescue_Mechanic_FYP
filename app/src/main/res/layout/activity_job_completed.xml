<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceConfirmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/complete_heading"
            android:text="Your Service has been Completed"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_heading"
            android:text="Time Taken"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:text="0.00"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price_heading"
            android:text="Total Price"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/services"
            android:text="Rs. 0.00"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Points Claimed"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/points"
            android:textSize="20dp"
            android:layout_above="@+id/favorite"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Customer"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Customer"
            android:id="@+id/name_mechanic"
            android:textSize="20dp"
            android:layout_above="@+id/favorite"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_request"
            android:text="Done"
            android:layout_gravity="bottom"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/loginbutton"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</RelativeLayout>