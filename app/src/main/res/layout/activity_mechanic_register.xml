<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready Rescue"
                android:textSize="26dp"
                android:textColor="@color/colorBlack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/heading"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanic"
                android:textSize="24dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/heading"
                android:layout_marginTop="10dp"
                android:id="@+id/user_type"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/colorAccent"
                android:layout_below="@+id/user_type"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorAccent"
                android:layout_below="@+id/email" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorAccent"
                android:layout_below="@+id/name"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorAccent"
                android:layout_below="@+id/phone_number"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tire Change"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/password"
                android:id="@+id/tire_change"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Battery Jump Start"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tire_change"
                android:id="@+id/battery_jump_start"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lock Smith Services"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/battery_jump_start"
                android:id="@+id/lock_smith_services"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuel, Oil, Coolant Delivery"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lock_smith_services"
                android:id="@+id/fuel_delivery"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Engine Related Issues"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/fuel_delivery"
                android:id="@+id/engine_issues"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Towing Services"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/engine_issues"
                android:id="@+id/towing_services"/>


            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/loginbutton"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/towing_services" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/registerbutton"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/register" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>